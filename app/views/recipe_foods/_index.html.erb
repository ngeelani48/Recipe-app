<% recipe_foods.each do |recipe_food| %>
  <tr>
    <td><%= recipe_food.food.name %></td>
    <td><%= recipe_food.quantity %><%= recipe_food.food.measurement_unit %></td>
    <td>$<%= recipe_food.food.price * recipe_food.quantity %></td>
    <% if @recipe.user == current_user %>
      <td>
        <%= link_to "Edit", edit_recipe_recipe_food_path(@recipe, recipe_food), class: "edit-link" %>
        <%= link_to "Remove", recipe_recipe_food_path(recipe_food.recipe_id, recipe_food.id),
        data: {"turbo-method": :delete}, class: "delete-link" %>
      </td>
    <% end %>
  </tr>
<% end %>